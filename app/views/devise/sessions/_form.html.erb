<%= simple_form_for(resource, as: resource_name,
  url: session_path(resource_name), html: {class: "form_login"}) do |f| %>
  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, class: "form-control form-control-fix"  %>
    </div>
    <div class="form-group">
      <%= f.label :password, t(".password") %>
      <%= f.password_field :password, class: "form-control form-control-fix" %>
    </div>
    <div class="form-group text-left">
      <% if devise_mapping.rememberable? %>
          <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t("remember") %></span>
          <% end %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
  <div class="form-group" style="text-align: center;">
    <%= f.button :submit, "Log in", class: "login-button"%>
  </div>
<% end %>
