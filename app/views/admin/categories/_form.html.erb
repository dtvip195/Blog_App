<%= form_for [:admin, Category.new], html: {class: "form-inline"}, remote: true do |f| %>
  <div class="form-group mb-2">
    <%= f.label :name, t(".new"), class: "" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= f.text_field :name, class: "form-control"  %>
  </div>
  <%= f.submit t("submit"), class: "btn btn-primary mb-2" %>
<% end %>
