<%= simple_form_for [:admin, Post.new] do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :title, t(".title") %>
      <%= f.text_field :title, class: "form-control"  %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :content, t(".topic") %>
      <%= f.select :topic_id, Topic.all.collect {|t| [ t.name, t.id ] }, {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, t(".topic") %>
    <%= f.text_area :content, class: "form-control", rows: "20" %>
  </div>
  <span class="picture">
    <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
  </span>
  <div class="form-group" style="text-align: center;">
    <%= f.button :submit, "Submit", class: "login-button"%>
  </div>
<% end %>
