<%= form_for [:admin, Topic.new], html: {class: "form-inline"}, remote: true do |f| %>
  <div class="form-group mb-2">
    <%= f.label :name, "Category: ", class: "" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= f.select :category_id, @categories, {}, class: "form-control"  %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :name, "Topic: ", class: "" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= f.text_field :name, class: "form-control"  %>
  </div>
  <%= f.submit t("submit"), class: "btn btn-primary mb-2" %>
<% end %>
