<% @hot_post.each_with_index do |n, i| %>
  <% if i == 0 %>
    <div class="container-hot-post1">
      <div class="row">
        <div class="col-sm-3">
          <%= image_tag "#{n.image}", class: "image" %>
        </div>
        <div class="col-sm-9">
          <p><%= n.title %></p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="container-hot-post">
      <div class="row">
        <div class="col-sm-3">
          <%= image_tag "#{n.image}", class: "image" %>
        </div>
        <div class="col-sm-9">
          <p><%= n.title %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


