<div class="container">
  <div class="container-home">
    <div class="row">
      <div class="col-sm-8">
        <div id="my-posts" style="padding-top: 24px;">
          <%= render "new_post" %>
        </div>
        <div id="infinite-scrolling">
          <%= will_paginate @new_post %>
        </div>
      </div>

      <div class="col-sm-4">
        <%= render "share/search" %>

        <%= render "share/about_me" %>

        <%= render "share/hashtags" %>

        <div class="card my-4">
          <h5 class="card-header"><%= t "top_post" %></h5>
          <div class="card-body">
            <%= render "share/top_post" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
